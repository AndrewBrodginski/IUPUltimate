<!DOCTYPE html>
<html>

<head>
  <title>IUP - Ultimate Frisbee and Fun</title>
  <meta http-equiv="Pragma" content="no-cache">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/assets/css/main.css">
  <style type="text/css"></style>
  <script src="/assets/vendor/jquery/dist/jquery.min.js"></script>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="\assets\vendor\material-design-lite\material.min.css">
  <script src="/assets/vendor/material-design-lite/material.min.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script src="https://use.fontawesome.com/d0e47f0c64.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
</head>

<body>
  {{> _nav}}
  <main class="mdl-layout__content">
    <div class="page-content">

      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
          <div class="schedule-card mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
              <h2 class="mdl-card__title-text">{{title_text}}</h2>
            </div>
            <div class="mdl-card__supporting-text">
              {{supporting_text}}
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--4-col schedule-section">

                  <div class="girls_schedule">
                    <h4>Girls Practices</h4>
                    <div class="practices">
                      <div class="where">
                        <strong>Where:</strong> {{girls_schedule.where}}
                      </div>


                      {{#each girls_schedule.day }}

                      <div class="times">
                        {{name}} {{time}}<br>

                      </div>
                      {{/each}}
                    </div>
                  </div>
                  <div class="join-contacts">
                    <h4>Who To Contact</h4>
                    {{#each girls_contacts}}
                      <div class="contact">
                      {{name}} &nbsp; &nbsp; &nbsp;
                      <a href="mailto:{{email}}" type="email">{{email}}</a>
                    </div>
                    {{/each}}
                  </div>

                </div>
                <br>
                <div class="mdl-card__actions mdl-card--border mdl-cell--hide-desktop mdl-cell--hide-tablet"></div>
                <br>
                <div class="mdl-cell mdl-cell--4-col schedule-section">
                  <div class="guys_schedule">
                    <h4>Guys Practices</h4>
                    <div class="practices">
                      <div class="where">
                        <strong>Where:</strong> {{guys_schedule.where}}
                      </div>


                      {{#each guys_schedule.day }}

                      <div class="times">
                        {{name}} {{time}}<br>

                      </div>
                      {{/each}}
                    </div>
                  </div>
                  <div class="join-contacts">
                    <h4>Who To Contact</h4>
                    {{#each guys_contacts}}
                      <div class="contact">
                      {{name}} &nbsp; &nbsp; &nbsp;
                      <a href="mailto:{{email}}" type="email">{{email}}</a>
                    </div>
                    {{/each}}
                  </div>
                </div>
                <div class="mdl-cell mdl-cell--4-col">
                    <img id="join_img" src="{{join_image}}">
                </div>
              </div>
            </div>
            <div class="mdl-card__menu">
            </div>
          </div>
        </div>

      </div>
    </div>
    {{> _footer}}
  </main>
</body>

</html>