<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--8-col">
    <div class="main-card mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">{{main_title}}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        {{lorem}}
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <p>{{lorem}}</h3>
      </div>
      <div class="mdl-card__menu">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--4-col">
    <div class="twitter-card mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Twitter</h2>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--12-col">
    <div class="calendar-card mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Calendar</h2>
      </div>
      <span class="mdl-card__actions mdl-card--border"></span>
      <div>
        {{#each Upcoming_Events}}
          <div class="date">
            {{this.date}}
          </div>
          <div class="time">
              {{this.time}}
          </div>
          <div class="event_info">
            {{this.title}}
            {{this.description}}
            {{this.team}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>